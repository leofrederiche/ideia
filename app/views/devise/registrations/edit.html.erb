<aside>
<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, "Nome" %><br />
  <%= f.text_field :name, autofocus: true %></div>

  <div><%= f.label :last_name, "Sobrenome" %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :email, "E-mail" %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :age, "Idade" %><br />
  <%= f.text_field :age %></div>

  <div><%= f.label :contact, "Contato" %><br />
  <%= f.text_field :contact %></div>  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <br>

  <div><%= f.label :password, "Senha:" %> <i>(deixe em branco se você não quiser mudá-lo)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, "Confirmar senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <br><br>
  <div><%= f.label :current_password, "Senha atual" %> <i>(precisamos de sua senha atual para confirmar as alterações)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Infeliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Deseja mesmo cancelar sua conta?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
</aside>