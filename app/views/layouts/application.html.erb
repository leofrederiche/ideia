<!DOCTYPE html>
<html>
<head>
  <title>GI - Group Idea</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="bodyAll">

<nav class="navbar">
	<%= link_to "Group Idea", root_path, id: "titleNav" %>
	<%= link_to "Top-Ideias", top_idea_path, id: "linkNav" %>
	<%= link_to "Como Funciona", about_path, id: "linkNav" %>
	<div id="logar">
		<%= button_tag "Nova Ideia", id: "btnNav", onclick: "openSign();" %>
	</div>
</nav>

<%= yield %>

<div id="sign">
	<h3>Nova Ideia</h3>
	<%= form_for @idea, url: root_path do |n| %>
		<%= n.label :title, "Titulo da ideia: " %><br>
		<%= n.text_field :title, maxlength: "15", style: "width: 170px" %>(maximo de 15)<br>

		<%= n.label :description, "DescrisÃ£o basica: " %><br>
		<%= n.text_field :description, maxlength: "50", style: "width: 170px" %>(maximo de 50)<br>

		<%= n.label :idea, "Ideia: " %><br>
		<%= n.text_area :idea %><br>

		<%= n.label :contact, "Contato: " %><br>
		<%= n.text_field :contact %><br>

		<%= n.label :link_project, "Link do projeto: " %><br>
		<%= n.text_field :link_project %><br>

		<%= n.label :idealizer, "Idealizador: " %><br>
		<%= n.text_field :idealizer, maxlength: "20", width: "150px" %>(maximo de 20)<br>

		<%= n.submit "Adicionar" %>
		<strong><%= link_to "Cancelar", "#", style: "color: red", onclick: "closeSign();" %><strong>
	<% end %>
</div>

</body>
</html>
