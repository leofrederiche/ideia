<div id="panel2" style=" height: 80px;">
	<%= image_tag "user_profile.png", style: "width: 150px; position: relative; top: 55px; left: 80px;" %>
</div>
<aside style="left: 20%;">
	<p style="position: relative; float: right; margin-right: 100px; top: 5px;"><%= link_to  "Editar meu perfil", edit_user_registration_path %></p>
	<h1>Perfil de <%= "#{@user_perfil.name} #{@user_perfil.last_name}" %></h1>
	
	<p><strong>Nome:</strong> <%= @user_perfil.name %> </p>
	<p><strong>Sobrenome:</strong> <%= @user_perfil.last_name %> </p>
	<p><strong>E-mail:</strong> <%= @user_perfil.email %></p>
	<p><strong>Web Site:</strong> <%= link_to "#{@user_perfil.web_site}", @user_perfil.web_site %> </p>
	<p><strong>Idade:</strong> <%= @user_perfil.age %></p>
	<p><strong>Contato:</strong> <%= @user_perfil.contact %>
		<% if @user_perfil.contact == nil %>
			<span style="color: green"> (Necessario para fazer uma colaboração)</span></p>
		<% end %>
	<p><strong>Colabora:</strong> 
		<% unless @user_perfil.collaborate == nil %> 
			<%= @employer.find(@user_perfil.collaborate).title %>
		<% end %>
	</p>
</aside>